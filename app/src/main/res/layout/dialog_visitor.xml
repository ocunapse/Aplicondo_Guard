<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:paddingTop="2dp"
    android:paddingVertical="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="8dp"
            android:gravity="bottom|center"
            android:text="Visitor"
            android:layout_marginTop="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/close_btn_visitor_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

    </FrameLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxStrokeWidth="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:boxStrokeWidthFocused="0dp"
        android:textColorHint="@color/aplicondo_red"
        app:hintTextColor="@color/aplicondo_red"
        app:hintTextAppearance="@style/HintLabel"
        android:hint="Visitor Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/visitor_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextColor="@color/aplicondo_red"
        android:textColorHint="@color/aplicondo_red"
        app:hintTextAppearance="@style/HintLabel"
        android:hint="Visitor Phone Number">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/visitor_phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:textColorHint="@color/aplicondo_red"
        app:hintTextColor="@color/aplicondo_red"
        app:hintTextAppearance="@style/HintLabel"
        android:hint="Vehicle Registration No">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/visitor_vehicle_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
<Space
    android:layout_width="match_parent"
    android:layout_height="18dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:textColorHint="@color/aplicondo_red"
        app:hintTextColor="@color/aplicondo_red"
        app:hintTextAppearance="@style/HintLabel"
        android:hint="Resident Unit">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/visitor_resident_unit_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        android:textColorHint="@color/aplicondo_red"
        app:hintTextColor="@color/aplicondo_red"
        app:hintTextAppearance="@style/HintLabel"
        android:hint="Resident Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/visitor_resident_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/r_phone_num_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Resident Phone Number"
        android:textColorHint="@color/aplicondo_red"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextAppearance="@style/HintLabel"
        android:clickable="true"
        app:hintTextColor="@color/aplicondo_red">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/visitor_resident_phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/positive_dark_green"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/visitor_reject_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:backgroundTint="@color/aplicondo_red"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="18sp"
            android:text="Reject"/>
<Space
    android:layout_width="20dp"
    android:layout_height="match_parent"/>
        <Button
            android:id="@+id/visitor_verified_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@null"
            android:theme="@style/Theme.Design.Light.NoActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/positive_green"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="18sp"
            android:text="Arrived" />
    </LinearLayout>
</LinearLayout>